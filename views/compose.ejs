<%- include("./partials/header"); -%>
<h1 class="my-3">Compose</h1>
<form  action="/compose" method="POST">
    <div class="form-group">
        <div class="mb-3">
            <label for="FormControlInput" class="form-label">Title</label>
            <input type="text" class="form-control" id="FormControlInput" name="postTitle" placeholder="Title" blur>
        </div>
        <div class="mb-3">
            <label for="FormControlTextarea" class="form-label">Post</label>
            <textarea class="form-control" id="FormControlTextarea" rows="10" name="postBody" ></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer"); -%>